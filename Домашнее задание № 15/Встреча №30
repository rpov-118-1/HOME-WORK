Тема: Строки
Домашнее задание
Задание 1:
Написать функцию, которая удаляет из строки символ с заданным номером.
#include "pch.h"
#include "iostream"
#include "ctime"
#include "stdlib.h"
#include "stdlib.h"
#include "stdio.h"
#include "cstdio"
#include "cstring"
#include "cstdio"
#include "cstring"
#include "cstdlib"
#include "conio.h"
#include "ctype.h"

using namespace std;
const size_t N = 1024;
typedef char T[N];
void func(char *ar, int dlina, int zn);
int main()
{
	int n = 0, znach = 0;	char *ar = 0; T arr = {};

	gets_s(arr);
	ar = arr;
	n = strlen(arr);
	cout << "Enter the number of the character whose value you want to delete." << endl;
	cin >> znach;
	func(ar, n, znach);

	return 0;
}
void func(char *ar, int dlina, int zn)
{
	char  *a = 0,k=0; a = new char[dlina + 1];
	for (int i = zn + 1; i < dlina+1; i++)
	{

		a[k] = ar[i]; k++;
		cout  << a[k];
	}
	k = 0;
	while (a[k])
	{
		ar[zn + k] = a[k];
		k++;
	}
	delete[]a;
	for (int i = 0; i < zn + k; i++)
		cout << "\n     " << ar[i];
}
